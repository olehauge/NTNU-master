<?xml version="1.0" encoding="UTF-8"?>
<Request
      xmlns="urn:oasis:names:tc:xacml:1.0:context"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:oasis:names:tc:xacml:1.0:context
        cs-xacml-schema-context-01.xsd">
    <Subject>
        <!-- The subjects cleareance -->
        <Attribute
              AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-clearance"
              DataType="http://www.w3.org/2001/XMLSchema#string">
            <AttributeValue>unclassified</AttributeValue>
        </Attribute>
    </Subject>
    <Resource>
        <!-- The document -->
        <Attribute
              AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
              DataType="http://www.w3.org/2001/XMLSchema#anyURI">
            <AttributeValue>unclassified.pdf</AttributeValue>
        </Attribute>
        <!-- The document classification -->
        <Attribute
              AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-classification"
              DataType="http://www.w3.org/2001/XMLSchema#anyURI">
            <AttributeValue>unclassified</AttributeValue>
        </Attribute>
    </Resource>
    <Action>
        <Attribute
              AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
              DataType="http://www.w3.org/2001/XMLSchema#string">
            <AttributeValue>write</AttributeValue>
        </Attribute>
    </Action>
</Request>
